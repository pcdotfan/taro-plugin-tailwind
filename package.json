{
  "name": "taro-plugin-tailwind",
  "version": "1.2.8",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run prod",
    "dev": "tsc -w",
    "prod": "tsc",
    "clean": "rimraf dist",
