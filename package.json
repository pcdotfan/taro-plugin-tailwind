{
  "name": "taro-plugin-tailwind",
  "version": "1.3.2",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && npm run prod",
    "dev": "tsc -w",
    "prod": "tsc",
    "clean": "rimraf dist",
    "release": "release-it"
  },
  "files": [
    "src",
    "config",
    "dist",
    "index.js",
    "package.json"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pcdotfan/taro-plugin-tailwind.git"
  },
  "author": "pcdotfan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pcdotfan/taro-plugin-tailwind/issues"
  },
  "homepage": "https://github.com/pcdotfan/taro-plugin-tailwind#readme",
  "devDependencies": {
    "@tarojs/taro": "^3.6.8",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.4.2",
    "@types/react": "^18.2.15",
    "color-string": "^1.9.1",
    "release-it": "^16.1.0",
    "rimraf": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "tailwindcss": "^3.3.3",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "postcss-loader": "4.3.0",
    "postcss-selector-replace": "^1.0.2"
  },
  "hooks": {
    "after:bump": "npm run build"
  },
  "release-it": {
    "github": {
      "release": true,
      "web": true
    },
    "npm": {
      "skipChecks": true
    }
  }
}
