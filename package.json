  "files": [
    "src",
    "config",
    "dist",
    "index.js",
    "package.json"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pcdotfan/taro-plugin-tailwind.git"
  },
  "author": "pcdotfan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pcdotfan/taro-plugin-tailwind/issues"
  },
  "homepage": "https://github.com/pcdotfan/taro-plugin-tailwind#readme",
  "devDependencies": {
    "@tarojs/service": "^3.3.3",
    "@tarojs/taro": "^3.3.3",
    "@types/fs-extra": "^9.0.12",
    "@types/glob": "^7.1.4",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.6.1",
    "@types/react": "^17.0.18",
    "@types/webpack-dev-server": "^4.1.0",
    "color-string": "^1.6.0",
    "release-it": "^14.11.4",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@windicss/plugin-utils": "^1.2.7",
    "postcss-loader": "^4.3.0",
    "postcss-selector-replace": "^1.0.2",
    "windicss-webpack-plugin": "^1.4.4"
